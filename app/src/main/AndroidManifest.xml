            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExerciseTwo"
            android:label="@string/title_activity_exercise_two"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExerciseThree"
            android:label="@string/title_activity_exercise_three"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExerciseFour"
            android:label="@string/title_activity_vierde_oefening"
